{
  "name": "philstainer.io",
  "description": "My personal website",
  "version": "1.0.0",
  "repository": "https://github.com/PhilStainer/philstainer.io",
  "author": "Phil Stainer <phil.stainer@pm.me> (https://philstainer.io)",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test:e2e": "start-server-and-test dev http://localhost:3000 cy:open",
    "test:e2e:run": "start-server-and-test dev http://localhost:3000 cy:run",
    "test": "jest",
    "test-all": "yarn lint && yarn type-check && yarn type-check:cy && yarn test",
    "type-check": "tsc --pretty --noEmit",
    "type-check:cy": "tsc --project cypress/tsconfig.json --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check && yarn run type-check:cypress"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "prettier": {
    "semi": false,
    "arrowParens": "avoid",
    "singleQuote": true,
    "tabWidth": 2,
    "printWidth": 80,
    "bracketSpacing": false
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.4.0",
    "autoprefixer": "^10.2.5",
    "date-fns": "^2.19.0",
    "next": "10.0.8",
    "postcss": "^8.2.7",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "tailwindcss": "^2.0.3"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.32",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "babel-jest": "^26.6.3",
    "cypress": "^6.6.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^5.1.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "start-server-and-test": "^1.12.0",
    "typescript": "^4.2.3"
  }
}
